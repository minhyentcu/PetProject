    <script src="~/web-themes/assets/vendor/php-email-form/validate.js"></script>*@

    <!-- Template Main JS File -->
    <script src="~/web-themes/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        console.log(window.location.pathname);
        if (window.location.pathname === "/lien-he") {
            var element = document.getElementById("link-about");
            element.classList.add("active");
        } else {
            var element = document.getElementById("link-home");
            element.classList.add("active");
        }
    </script>

</body>

