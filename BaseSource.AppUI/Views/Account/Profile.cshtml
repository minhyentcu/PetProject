@model ProfifleInfoDto
@{
    ViewData["Title"] = "Thông tin người dùng";
    //var orders = ViewBag.Orders as List<OrderInfoDto>;

}

<section class="section">
    <div class="section-header">
        <h1>User</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Components</a></div>
            <div class="breadcrumb-item">User</div>
        </div>
    </div>

    <div class="section-body">

        <div class="row">
            <div class="col-12 col-sm-12 col-lg-5">
                <div class="card author-box card-primary">
                    <div class="card-body">
                        <div class="author-box-left">
                            <img alt="image" src="/admin-themes/assets/img/avatar/avatar-1.png" class="rounded-circle author-box-picture">
                            <div class="clearfix"></div>
                            <button class="mt-3 btn btn-success " data-toggle="modal" data-target="#updateModal">Cập nhật Telegram</button>
                            <a href="/account/changePassword" class="btn btn-danger mt-3 ">Đổi mật khẩu</a>
                        </div>
                        <div class="author-box-details">
                            <div class="author-box-name">
                                <a href="#">@Model.UserName</a>
                            </div>
                            <div class="author-box-job">Người dùng</div>
                            <div class="author-box-description">

                                @* <p>
                                <strong>Số điện thoại: </strong>
                                <span>@Model.Phone</span>
                                </p>*@
                                <p>
                                    <strong>Telegram: </strong>
                                    <span><a href="#">@Model.TelegramAPI</a></span>
                                </p>
                                @* <h2 class="section-title">Gói LIVE-1080</h2>
                                <p>
                                <strong>Gói đang sử dụng: </strong>
                                <span>LIVE</span>

                                </p>
                                <p>
                                <strong>Được tạo: </strong>
                                <span>5 luồng live</span>
                                </p>
                                <p>
                                <strong>Số luồng chạy đồng thời: </strong>
                                <span>5 luồng live</span>
                                </p>
                                <p>
                                <strong>Ngày đăng ký LIVE-1080: </strong>
                                <span>@(Model.PackageLive1080?.CreatedTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")</span>
                                </p>
                                <p>
                                <strong>Ngày hết hạn LIVE-1080: </strong>
                                <span>@(Model.PackageLive1080?.ExpiredTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")</span>
                                </p>
                                <h2 class="section-title">Gói LIVE-4K</h2>
                                <p>
                                <strong>Được tạo: </strong>
                                <span>5 luồng live</span>
                                </p>
                                <p>
                                <strong>Số luồng chạy đồng thời: </strong>
                                <span>5 luồng live</span>
                                </p>*@
                                @* <p>
                                <strong>Ngày đăng ký LIVE-4K: </strong>
                                <span>@(Model.PackageLive4k?.CreatedTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")</span>
                                </p>
                                <p>
                                <strong>Ngày hết hạn LIVE-4K: </strong>
                                <span>@(Model.PackageLive4k?.ExpiredTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")</span>
                                </p>*@

                            </div>
                            <a href="#" class="btn btn-social-icon btn-facebook mr-1">
                                <i class="fab fa-facebook-f"></i>
                            </a>

                        </div>
                    </div>
                </div>

            </div>
            <div class="col-12 col-sm-12 col-lg-7">
                <div class="card">
                    <div class="card-header">
                        <h4>Thông tin Số luồng đang chạy</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled user-progress list-unstyled-border list-unstyled-noborder">
                            <li class="media">

                                <div class="media-body">
                                    <div class="media-title">Số luồng LIVE 1080 đang chạy</div>

                                </div>
                                <div class="media-progressbar">
                                    <div class="progress-text"></div>
                                    <div class="progress" data-height="6">
                                        <div class="progress-bar bg-primary" data-width="3%"></div>
                                    </div>
                                </div>

                            </li>
                            <li class="media">

                                <div class="media-body">
                                    <div class="media-title">Số luồng LIVE 1080 đã tạo</div>

                                </div>
                                <div class="media-progressbar">
                                    <div class="progress-text"></div>
                                    <div class="progress" data-height="6">
                                        <div class="progress-bar bg-primary" data-width="3%"></div>
                                    </div>
                                </div>

                            </li>
                            <li class="media">

                                <div class="media-body">
                                    <div class="media-title">Số luồng LIVE-4k đang chạy</div>

                                </div>
                                <div class="media-progressbar">
                                    <div class="progress-text"></div>
                                    <div class="progress" data-height="6">
                                        <div class="progress-bar bg-primary" data-width="3%"></div>
                                    </div>
                                </div>

                            </li>
                            <li class="media">

                                <div class="media-body">
                                    <div class="media-title">Số luồng LIVE-4k đã tạo</div>

                                </div>
                                <div class="media-progressbar">
                                    <div class="progress-text">1</div>
                                    <div class="progress" data-height="6">
                                        <div class="progress-bar bg-primary" data-width="3%"></div>
                                    </div>
                                </div>

                            </li>
                        </ul>
                    </div>
                </div>


            </div>
        </div>

        <div class="alert alert-primary">
            <p>* Nhận thông báo telegram</p>
            <p>+ Vào link https://t.me/userinfobot nhấn start để nhận ID</p>   
            <p>+ Cập nhập telegram: điền ID</p>
            <p>* Nhận thông báo live:</p>
            <p>+ Vào http://t.me/ShineLivestreamBot ấn (nhấn start) thì mới nhận được thông báo.</p>

        </div>
        
    </div>
</section>
<div class="modal fade" tabindex="-1" role="dialog" id="updateModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cập nhật Telegram </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="updateForm" method="post" action="/account/update">
                <div class="modal-body">
                    <p>Cập nhật thông tin Telegram API</p>
                    <input name="TelegramAPI" value="@Model.TelegramAPI" class="form-control" />
                </div>
                <div class="modal-footer bg-whitesmoke br">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Xác nhận </button>
                </div>
            </form>
        </div>
    </div>
</div>