@using BaseSource.ViewModels.Project;
@model ConfigSettingVm
@{
    ViewData["Title"] = "Cấu hình Website";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var categorys = ViewBag.Categorys as List<CategoryInfoDto>;
}

<section class="section">
    <div class="section-header">
        <h1>Cài đặt</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Home</a></div>
            <div class="breadcrumb-item"><a href="#">Cấu hình</a></div>
            <div class="breadcrumb-item">
                @ViewData["Title"]
            </div>
        </div>
    </div>
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/admin/setting/Index" enctype="multipart/form-data">
                            <div class="row">
                                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-12">
                                    <h6>@ViewData["Title"]</h6>
                                    <div class="form-group mb-4">
                                        <label class="">Tên Website</label>
                                        <div class="">

                                            <input asp-for="WebsiteName" required placeholder="Nhập tên Website" class="form-control" />
                                            <span asp-validation-for="WebsiteName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="">Link FB</label>
                                        <div class="">
                                            <input asp-for="LinkFB" required placeholder="Nhập link Facebook" class="form-control" />
                                            <span asp-validation-for="LinkFB" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="">Link Youtube</label>
                                        <div class="">
                                            <input asp-for="LinkYoutube" required placeholder="Nhập link souce code" class="form-control" />
                                            <span asp-validation-for="LinkYoutube" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                  
                                    <div class="form-group mb-4">
                                        <label class="">Thông tin Website</label>
                                        <div class="">

                                            <textarea asp-for="About" class="summernote-simple"></textarea>
                                            <span asp-validation-for="About" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group row mb-4">
                               
                                <div class="buttons col-sm-12 col-md-8">
                                   
                                    <button type="submit" class="btn btn-primary btn-lg ">Cập nhật</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
       
    </script>
}

